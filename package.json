{
  "name": "primeflex-intellisense",
  "displayName": "primeflex-intellisense",
  "license": "MIT",
  "icon": "assets/primeflex-logo.png",
  "publisher": "pvictordev",
  "author": {
    "name": "Victor Purice",
    "email": "pvictor0110@gmail.com",
    "url": "https://github.com/pvictordev"
  },
  "description": "Intelligent PrimeFlex tooling for VS Code",
  "version": "1.1.0",
  "engines": {
    "vscode": "^1.103.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pvictordev/primeflex-intellisense"
  },
  "keywords": [
    "primeflex",
    "primereact",
    "primevue",
    "primefaces"
  ],
  "categories": [
    "Snippets",
    "Linters",
    "Themes"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:xhtml",
    "onLanguage:vue",
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "primeflex.restart",
        "title": "Restart Colors",
        "category": "PrimeFlex"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "primeflex",
      "properties": {
        "primeflex.theme": {
          "type": "string",
          "scope": "resource",
          "default": "./src/styles/primeflex.css",
          "description": "Path to the CSS file that defines the color theme."
        },
        "primeflex.enabled": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Enable/disable the autocomplete."
        },
        "primeflex.classAttributes": {
          "type": "array",
          "default": [],
          "scope": "resource",
          "description": "The HTML class attributes for which to provide class completions."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  }
}
